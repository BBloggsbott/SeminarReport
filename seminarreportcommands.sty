	\fakesection{Front Page}
	\makeseminartitle
	\vspace{0.5cm}
	\begin{center}
		\Large \textbf{In partial fulfillment of requirements for the degree of\\}
		\huge Bachelor of Technology\\In\\Computer Science and\\Engineering\\
		\vspace{1cm}
		\Large \textbf{SUBMITTED BY:\\\LARGE \studentname\\\studentregno\\}
