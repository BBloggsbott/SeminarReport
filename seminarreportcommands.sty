	\makeseminartitle
	\vspace{1cm}
	\begin{center}
		\textbf{\huge By\\\studentname\\\studentregno\\}
		\vfill
		\includegraphics[height=4cm]{styleimages/sastra.png}\\
		\vspace{1cm}
		\Large \textbf{Department of Computer Science and Engineering\\School of Computing\\SASTRA Deemed University\\}
		\Large Thanjavur – 613 401.\\
		\vspace{0.5cm} [ \studyyear ] 
	\end{center}
}

\newcommand{\fakesection}[1]{%
	%\par\refstepcounter{section}% Increase section counter
	%\sectionmark{#1}% Add section mark (header)
	\addcontentsline{toc}{section}{#1}% Add section to ToC
	% Add more content here, if needed.
}

